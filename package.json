{
  "name": "lab-management-system",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve": "nodemon minimal-server.js",
    "server": "nodemon minimal-server.js",
    "backend": "nodemon minimal-server.js",
    "frontend": "ng serve --port 4201 --proxy-config proxy.conf.json",
    "dev:frontend": "ng serve --port 4201 --proxy-config proxy.conf.json",
    "dev:backend": "nodemon minimal-server.js",
    "dev:both": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start:full": "concurrently --names \"API,WEB\" --prefix-colors \"blue,green\" \"npm run backend\" \"npm run frontend\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.3",
    "@angular/cdk": "^20.0.3",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "^20.0.3",
    "@angular/platform-browser": "^20.0.3",
    "@angular/platform-browser-dynamic": "^20.0.3",
    "@angular/router": "^20.0.0",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@lottiefiles/lottie-player": "^2.0.12",
    "@types/gsap": "^1.20.2",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "gsap": "^3.14.2",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "lottie-web": "^5.13.0",
    "mongodb": "^7.0.0",
    "mongoose": "^8.19.3",
    "multer": "^2.0.1",
    "ng2-charts": "^8.0.0",
    "nodemailer": "^7.0.6",
    "rxjs": "~7.8.0",
