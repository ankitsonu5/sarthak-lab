    "@angular/compiler-cli": "^20.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/file-saver": "^2.0.7",
    "@types/html2canvas": "^0.5.35",
    "@types/jasmine": "~5.1.0",
    "@types/jspdf": "^1.3.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
